<%= form_for(@shortcut_url, url: create_shortcut_url) do |form| %>
  <% if form.object.errors.any? %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <ul class="shortcut-errors">
        <% form.object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.url_field(
            :redirect_to,
            required: true,
            class: 'form-control form-control-lg form-control-rounded',
            placeholder: 'Enter original URL'
        ) %>
  </div>

  <div class="form-group text-center">
    <%= form.button('Get short URL', class: 'btn btn-primary btn-lg') %>
  </div>
<% end %>

